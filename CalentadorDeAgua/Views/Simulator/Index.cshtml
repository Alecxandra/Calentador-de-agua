
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h1>Simulador de calentador de agua</h1>
    </div>
</div>

<div class="row">
    <div class="col-sm-4 col-sm-offset-1">
        
        <form class="form-horizontal">
            <div class="form-group">
                <label for="env-temp" class="col-sm-5 control-label">Temperatura ambiente (Celsius)</label>
                <div class="col-sm-7">
                    <input type="number" class="form-control" id="env-temp" />
                </div>
            </div>
            <div class="form-group">
                <label for="tank-volume" class="col-sm-5 control-label">Volumen del tanque (Litros)</label>
                <div class="col-sm-7">
                    <input type="number" class="form-control" id="tank-volume" />
                </div>
            </div>
            <div class="form-group">
                <label for="water-volume" class="col-sm-5 control-label">Volumen del agua (Litros)</label>
                <div class="col-sm-7">
                    <input type="number" class="form-control" id="water-volume" />
                </div>
            </div>
            <div class="form-group">
                <label for="heat-power" class="col-sm-5 control-label">Potencia del calentador (Watts)</label>
                <div class="col-sm-7">
                    <input type="number" class="form-control" id="heat-power" />
                </div>
            </div>
            <div class="form-group">
                <label for="in-water-flow" class="col-sm-5 control-label">Flujo entrante de agua (Litros/segundo)</label>
                <div class="col-sm-7">
                    <input type="number" class="form-control" id="in-water-flow" />
                </div>
            </div>
            <div class="form-group">
                <label for="out-water-flow" class="col-sm-5 control-label">Flujo saliente de agua (Litros/segundo)</label>
                <div class="col-sm-7">
                    <input type="number" class="form-control" id="out-water-flow" />
                </div>
            </div>

            <button id="start-simulation" class="btn btn-success">Iniciar</button>
            <button id="start-simulation" class="btn btn-danger" disabled>Detener</button>
        </form>
    </div>
</div>
<div class="row">
    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" style="display: none;">
        <symbol id="wave">
            <path d="M420,20c21.5-0.4,38.8-2.5,51.1-4.5c13.4-2.2,26.5-5.2,27.3-5.4C514,6.5,518,4.7,528.5,2.7c7.1-1.3,17.9-2.8,31.5-2.7c0,0,0,0,0,0v20H420z"></path>
            <path d="M420,20c-21.5-0.4-38.8-2.5-51.1-4.5c-13.4-2.2-26.5-5.2-27.3-5.4C326,6.5,322,4.7,311.5,2.7C304.3,1.4,293.6-0.1,280,0c0,0,0,0,0,0v20H420z"></path>
            <path d="M140,20c21.5-0.4,38.8-2.5,51.1-4.5c13.4-2.2,26.5-5.2,27.3-5.4C234,6.5,238,4.7,248.5,2.7c7.1-1.3,17.9-2.8,31.5-2.7c0,0,0,0,0,0v20H140z"></path>
            <path d="M140,20c-21.5-0.4-38.8-2.5-51.1-4.5c-13.4-2.2-26.5-5.2-27.3-5.4C46,6.5,42,4.7,31.5,2.7C24.3,1.4,13.6-0.1,0,0c0,0,0,0,0,0l0,20H140z"></path>
        </symbol>
    </svg>

    <div id="page" class="page">

        <div class="percent">
            <div class="percent__inner">
                <div id="count" class="percent__num">50</div>
                <div class="percent__sign">%</div>
            </div>
        </div>
        <button id="button" class="button">Drink</button>
        <div id="water" class="water">
            <svg viewBox="0 0 560 20" class="water__wave water__wave_back">
                <use xlink:href="#wave"></use>
            </svg>
            <svg viewBox="0 0 560 20" class="water__wave water__wave_front">
                <use xlink:href="#wave"></use>
            </svg>
            <div class="water__inner">
                <div class="bubble bubble_1"></div>
                <div class="bubble bubble_2"></div>
                <div class="bubble bubble_3"></div>
            </div>
        </div>
    </div>
</div>